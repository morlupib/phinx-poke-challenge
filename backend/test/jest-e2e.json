{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@pokemon/(.*)$": "<rootDir>/../src/modules/pokemon/$1",
    "^@battle/(.*)$": "<rootDir>/../src/modules/battle/$1"
  }
}